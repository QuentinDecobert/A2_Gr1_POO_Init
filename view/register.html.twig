{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }} - Register
{% endblock %}
{% block content %}
    <h1>Register</h1>
    <form method="post" action="">
        <label for="username">Username:</label>
        <p><input type="text" class="form-control" id="username" name="username" required autofocus/></p>
        <label for="password">Password:</label>
        <p><input type="text" class="form-control" id="password" name="password" required/></p>
        <input type="submit" class="btn btn-default" value="Envoyer" />
    </form>
{% endblock %}